<?xml version="1.0" encoding="utf-8"?>
<!-- 扩展菜单 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/selector_left_menu_second_title">

    <HorizontalScrollView
        android:id="@id/left_menu_second_hori_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >

            <ImageView android:id="@+id/iv_second_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:src="@drawable/biz_fb_no_read" />

            <TextView
                android:id="@id/tv_left_menu_second_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_second_title"
                android:layout_marginLeft="24dp"
                android:gravity="center"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/safety_white" />
        </RelativeLayout>
    </HorizontalScrollView>

</RelativeLayout>