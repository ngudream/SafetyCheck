<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="2dp" >

    <RelativeLayout
        android:id="@id/layout_search_finished_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <RelativeLayout
            android:id="@id/layout_search_finished_left"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/safety_regular_delete_background_left" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@id/layout_search_finished_middle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/layout_search_finished_left"
            android:background="@drawable/safety_regular_delete_background_middle" >

            <TextView
                android:id="@id/tv_search_finished_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/fire_safety_check_system"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/safety_third_title_color" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@id/layout_search_finished_right"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/layout_search_finished_middle"
            android:background="@drawable/safety_regular_delete_background_right" >
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>